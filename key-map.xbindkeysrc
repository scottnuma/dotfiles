#Bright
"xbacklight -inc 20"
    m:0x0 + c:233
    XF86MonBrightnessUp 

#Darken
"xbacklight -dec 20"
    m:0x0 + c:232
    XF86MonBrightnessDown 

#Increase Volume
"amixer -D pulse sset Master 10%+"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

#Decrease Volume
"amixer -D pulse sset Master 10%-"
    m:0x0 + c:122
    XF86AudioLowerVolume 

#Toggle Mute
"amixer -D pulse set Master 1+ toggle"
    m:0x0 + c:121
    XF86AudioMute 

#Play Pause
"playerctl play-pause"
    m:0x0 + c:172
    XF86AudioPlay 

#Previous track
"playerctl previous track"
    m:0x0 + c:173
    XF86AudioPrev 

#Next Track
"playerctl next"
    m:0x0 + c:171
    XF86AudioNext 

